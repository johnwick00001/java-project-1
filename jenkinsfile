node('master'){
        stage('Code Checkout'){
                  checkout scm	
	}

	
	stage('Build'){
		sh "mvn clean install -Dmaven.test.skip=true"
	}
			
	stage ('Test Cases Execution'){
		sh "mvn clean org.jacoco:jacoco-maven-plugin:prepare-agent install -Pcoverage-per-test"
	}
	
	stage ('Archive Artifacts'){

		archiveArtfacts artifacts:  'target/*.war'
        }	
		
	
	
	stage('Code Deployment'){
		deploy adapters: [tomcat.service(credentialsId: 'admin', path: '', url: 'http://http://54.210.233.72:8080//')], contextPath: 'Planview', onFailure: false, war: 'target/*.war'
	}
        stage ('Notification'){
                     emailtext(
                         subjrct: "job completed",
                          body:   "jenkins pipeline job for maven build got completed",
                           to: "build alert-example.com"
                       )
}
